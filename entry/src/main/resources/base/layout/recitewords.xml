<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:words"
        ohos:height="35vp"
        ohos:width="126vp"
        ohos:text="$string:word"
        ohos:top_margin="25vp"
        ohos:horizontal_center="true"
        ohos:multiple_lines="true"

        ohos:text_size="20vp"
        ohos:text_alignment="horizontal_center"/>
    <Text
        ohos:id="$+id:timekeep"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="16vp"
        ohos:text="0:30"
        ohos:text_weight="700"
        ohos:text_color="#BEBEBE"
        ohos:left_of="$id:star1"

        ohos:right_margin="2vp"
        ohos:top_margin="57vp"/>
    <Image
        ohos:id="$+id:star1"
        ohos:height="16vp"
        ohos:width="16vp"
        ohos:image_src="$media:star"
        ohos:below="$id:words"
        ohos:align_left="$id:words"
        ohos:scale_mode="zoom_center"/>
    <Image
        ohos:id="$+id:star2"
        ohos:height="16vp"
        ohos:width="16vp"
        ohos:image_src="$media:star"
        ohos:below="$id:words"
        ohos:align_left="$id:words"
        ohos:scale_mode="zoom_center"
        ohos:left_margin="29vp"/>
    <Image
        ohos:id="$+id:star3"
        ohos:height="16vp"
        ohos:width="16vp"
        ohos:image_src="$media:star"
        ohos:below="$id:words"
        ohos:horizontal_center="true"
        ohos:scale_mode="zoom_center"/>
    <Image
        ohos:id="$+id:star4"
        ohos:height="16vp"
        ohos:width="16vp"
        ohos:image_src="$media:star"
        ohos:below="$id:words"
        ohos:align_right="$id:words"
        ohos:right_margin="29vp"
        ohos:scale_mode="zoom_center"/>
    <Image
        ohos:id="$+id:star5"
        ohos:height="16vp"
        ohos:width="16vp"
        ohos:image_src="$media:star"
        ohos:below="$id:words"
        ohos:align_right="$id:words"
        ohos:scale_mode="zoom_center"/>
    <Button
        ohos:id="$+id:option_btn1"
        ohos:height="20vp"
        ohos:width="110vp"
        ohos:background_element="$graphic:background_options"
        ohos:text="$string:option1"
        ohos:text_color="#696969"
        ohos:below="$id:star1"
        ohos:top_margin="8vp"
        ohos:horizontal_center="true"/>
    <Button
        ohos:id="$+id:option_btn2"
        ohos:height="20vp"
        ohos:width="110vp"
        ohos:background_element="$graphic:background_options"
        ohos:text="$string:option2"
        ohos:text_color="#696969"
        ohos:below="$id:option_btn1"
        ohos:top_margin="8vp"
        ohos:horizontal_center="true"/>
    <Button
        ohos:id="$+id:option_btn3"
        ohos:height="20vp"
        ohos:width="110vp"
        ohos:background_element="$graphic:background_options"
        ohos:text="$string:option3"
        ohos:text_color="#696969"
        ohos:below="$id:option_btn2"
        ohos:top_margin="8vp"
        ohos:horizontal_center="true"/>
    <Button
        ohos:id="$+id:option_btn4"
        ohos:height="20vp"
        ohos:width="110vp"
        ohos:background_element="$graphic:background_options"
        ohos:text="$string:option4"
        ohos:text_color="#696969"
        ohos:below="$id:option_btn3"
        ohos:top_margin="8vp"
        ohos:horizontal_center="true"/>
    <Button
        ohos:id="$+id:finish_icon"
        ohos:height="25vp"
        ohos:width="25vp"
        ohos:element_left="$media:finish2"
        ohos:left_of="$id:option_btn3"
        ohos:below="$id:option_btn3"
        ohos:right_margin="2vp"/>
    <Text
        ohos:id="$+id:text_wxzb"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="无需再背"
        ohos:text_size="9vp"
        ohos:below="$id:finish_icon"
        ohos:left_margin="30vp"/>

    <Button
        ohos:id="$+id:book_icon"
        ohos:height="25vp"
        ohos:width="25vp"
        ohos:element_left="$media:bookmark1"
        ohos:right_of="$id:option_btn3"
        ohos:below="$id:option_btn3"
        ohos:left_margin="5vp"/>
    <Text
        ohos:id="$+id:text_collect"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="收藏"
        ohos:text_size="9vp"
        ohos:below="$id:book_icon"
        ohos:align_right="$id:book_icon"
        ohos:right_margin="5vp"/>
    <Button
        ohos:id="$+id:quit"
        ohos:height="30vp"
        ohos:width="120vp"
        ohos:background_element="$graphic:background_quitbtn"
        ohos:align_parent_bottom="true"
        ohos:text="退出"
        ohos:text_color="white"
        ohos:horizontal_center="true"/>






</DependentLayout>
<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:en_sentence"
        ohos:height="35vp"
        ohos:width="150vp"
        ohos:text="$string:modeability_enonesentence"
        ohos:top_margin="30vp"
        ohos:left_margin="40vp"
        ohos:multiple_lines="true"

        ohos:text_size="10vp"
        ohos:text_alignment="center"/>
    <Text
        ohos:id="$+id:zh_sentence"
        ohos:height="35vp"
        ohos:width="150vp"
        ohos:left_margin="40vp"
        ohos:text="$string:modeability_onesentence"
        ohos:below="$id:en_sentence"
        ohos:multiple_lines="true"

        ohos:text_size="10vp"
        ohos:text_alignment="center"/>
    <Text
        ohos:id="$+id:text_jrmb"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="今日目标："
        ohos:below="$id:zh_sentence"
        ohos:align_left="$id:zh_sentence"

        ohos:text_size="10vp"
        ohos:top_margin="10vp"/>
    <Text
        ohos:id="$+id:target_num"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="10vp"
        ohos:right_of="$id:text_jrmb"
        ohos:below="$id:zh_sentence"
        ohos:top_margin="10vp"

        ohos:text="10词"/>
    <Text
        ohos:id="$+id:text_finish"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="10vp"
        ohos:text="已完成："
        ohos:right_of="$id:target_num"
        ohos:below="$id:zh_sentence"
        ohos:top_margin="10vp"
        ohos:left_margin="10vp"
        />
    <Text
        ohos:id="$+id:finish_num"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="10vp"
        ohos:right_of="$id:text_finish"
        ohos:below="$id:zh_sentence"
        ohos:top_margin="10vp"

        ohos:text="10词"/>
    <Text
        ohos:id="$+id:text_time"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="共计用时："
        ohos:below="$id:text_jrmb"
        ohos:text_size="12vp"
        ohos:top_margin="15vp"
        ohos:left_margin="10vp"

        />
    <Text
        ohos:id="$+id:time"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_size="20vp"
        ohos:text="02:30:29"
        ohos:text_color="#696969"

        ohos:below="$id:text_jrmb"
        ohos:top_margin="9vp"
        ohos:text_weight="700"
        ohos:right_of="$id:text_time"/>
    <Button
        ohos:id="$+id:btn1"
        ohos:height="30vp"
        ohos:width="60vp"
        ohos:text="今日任务"
        ohos:text_color="white"
        ohos:background_element="$graphic:background_modebtn1"
        ohos:align_left="$id:zh_sentence"
        ohos:text_size="10vp"
        ohos:align_parent_bottom="true"
        ohos:bottom_margin="30vp"
        />
    <Button
        ohos:id="$+id:btn2"
        ohos:height="30vp"
        ohos:width="60vp"
        ohos:text="我的收藏"
        ohos:text_color="white"
        ohos:background_element="$graphic:background_modebtn1"
        ohos:align_right="$id:zh_sentence"
        ohos:text_size="10vp"
        ohos:align_parent_bottom="true"
        ohos:bottom_margin="30vp"
        />



</DependentLayout>